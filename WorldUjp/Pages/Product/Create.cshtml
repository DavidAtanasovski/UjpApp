@page "{id}"
@model WorldUjp.Pages.Product.CreateModel
@{
    ViewData["Title"] = "Product Management";
}

<h1>Product Management</h1>
<form method="post">
    <partial name="_TaxPayerInfo" model="@Model.TaxPayer" />
    <input type="hidden" asp-for="@Model.Product.TaxPayerId" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <label asp-for="Product.Name"></label>
            <input class="form-control" asp-for="Product.Name" />
            <span class="text-danger" asp-validation-for="Product.Name"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Product.Price"></label>
            <input class="form-control" asp-for="Product.Price" />
            <span class="text-danger" asp-validation-for="Product.Price"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Product.DDVId"></label>
            <select class="form-control ddlDDV" asp-for="Product.DDVId">
                <option value="">Pick a DDV</option>
            </select>
            <span class="text-danger" asp-validation-for="Product.DDVId"></span>
        </div>
    </div>
    <div class="form-group d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-primary" asp-page="./Index" asp-route-id="@Model.TaxPayer.Id">Cancel</a>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/product.js" type="text/javascript"></script>
}

