@page
@model WorldUjp.Pages.TaxPayer.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@(Model.TaxPayer.Id == 0 ? "New Tax Payer" : $"Editing {Model.TaxPayer.FirstName} {Model.TaxPayer.LastName}")</h2>
<form method="post">
    <input type="hidden" asp-for="TaxPayer.Id" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <label asp-for="TaxPayer.FirstName"></label>
            <input class="form-control" asp-for="TaxPayer.FirstName" />
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="TaxPayer.LastName"></label>
            <input class="form-control" asp-for="TaxPayer.LastName" />
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="TaxPayer.Country"></label>
            <select class="form-control" asp-for="TaxPayer.CountryId" asp-items="@Model.Countries">
                <option value="">Pick a Country</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>


